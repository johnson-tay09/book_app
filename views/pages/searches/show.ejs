<!DOCTYPE html>
<html lang="en">
	<head>
		<meta
			name="”viewport”"
			content="”width"
			="device-width,"
			initial-scale="1”"
		/>
		<link rel="stylesheet" href="./styles/reset.css" />
		<link rel="stylesheet" href="./styles/base.css" />
		<link rel="stylesheet" href="./styles/layout.css" />
		<link rel="stylesheet" href="./styles/modules.css" />
		<title>Book Collection</title>
	</head>
	<body>
		<main>
			<div class="books">
				<ul>
					<% bookResults.forEach(book => { %>
						<section>
					<li class="book"><img src="<%= book.image %>" /></li>
					<li class="title"><h1><%= book.title %></li>
					<li class="author"><h3><%= book.author %></h3></li>
					<li class="description"><p><%= book.description %></p></li>
					<!-- <li><a href="../books/<%= book.id %>">Add Book to Favorites</a></li> -->
					<form type="hidden" id="create-form" action="/books" method="post">
					<fieldset>
						<input type="hidden" name="author" value="<%= book.author %>">
						<input type="hidden" name="title" value="<%= book.title %>">
						<input type="hidden" name="isbn" value="<%= book.isbn %>">
						<input type="hidden" name="img_url" value="<%= book.image %>">
						<input type="hidden" name="description" value="<%= book.description %>">
						<button type="submit">Add to Favorites</button>
					  </fieldset>
					  </form>
				</section>
					<% }) %>
				</ul>
			</div>
		</main>
	</body>
</html>
